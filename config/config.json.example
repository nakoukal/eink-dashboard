{
  "comment": "Configuration for Ecowitt GW2000A Weather Station",

  "use_local_api": true,

  "local_ip": "192.168.1.100",

  "api_key": "YOUR_ECOWITT_API_KEY",
  "application_key": "YOUR_ECOWITT_APPLICATION_KEY",
  "mac_address": "YOUR_STATION_MAC_ADDRESS",

  "home_assistant": {
    "url": "http://homeassistant.local:8123",
    "token": "YOUR_LONG_LIVED_ACCESS_TOKEN",
    "temperature_entity": "sensor.outdoor_temperature"
  },

  "display": {
    "width": 800,
    "height": 480,
    "update_interval": 300
  },

  "units": {
    "temperature": "celsius",
    "wind_speed": "kmh",
    "pressure": "hpa",
    "rainfall": "mm"
  }
}
